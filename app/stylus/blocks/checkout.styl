half()
    display inline-block
    width 48.5%
    margin-right 3%
    vertical-align top

third()
    display inline-block
    width 30%
    margin-right 5%
    vertical-align top

.checkout
    font-size 18.67px // 28px / 1.5

    @media (min-width 1200px)
        font-size 28px

    input, textarea
        width 100%
        background-color white
        border none
        padding 8px 10px
        margin-top 3px
        resize none
        vertical-align top

        &:focus
            outline-color #a35200

    textarea
        padding 13px 17px
        height 87px
        vertical-align top

        @media (min-width 480px)
            height auto

    fieldset
        border none
        font-size 0

    &__title
        font-weight 700
        font-size 60px // 80px / 1.5
        margin-bottom 20px
        text-transform uppercase
        max-width 300px
        hyphens()

        @media (min-width 480px)
            max-width 460px

        @media (min-width 768px)
            max-width 748px

        @media (min-width 992px)
            max-width 972px

        @media (min-width 1200px)
            max-width 1180px
            font-size 80px
            margin-bottom 64px

    &__column
        @media (min-width 992px)
            half()
            vertical-align top

        &:nth-of-type(2n)
            margin-right 0

    &__path
        font-size 0
        margin-bottom 30px

        @media (min-width 1200px)
            margin-bottom 55px

        &:last-child
            margin-bottom 0

    &__subtitle
        font-weight 700
        font-size 22.6px // 34px / 1.5
        margin-bottom 15px
        margin-left 3px
        text-transform uppercase
        max-width 295px
        hyphens()

        @media (min-width 480px)
            max-width 460px

        @media (min-width 768px)
            max-width 748px

        @media (min-width 1200px)
            font-size 34px
            margin-bottom 25px

    &__row
        margin-bottom 15px

        @media (min-width 1200px)
            margin-bottom 25px

        &:last-child
            margin-bottom 0

    &__input
        line-height 30px
        font-size 18.67px // 28px / 1.5
        margin-bottom 10px

        @media (min-width 480px)
            margin-bottom 0

        @media (min-width 1200px)
            font-size 28px

        &:last-child
            margin-bottom 0

        label
            display inline-block
            width 100%
            line-height 17px
            vertical-align top
            hyphens()

            @media (min-width 1200px)
                line-height 27px

        &_half
            @media (min-width 480px)
                half()
                width 48%
                margin-right 4%

            &:last-child
                margin-right 0

        &_third
            @media (min-width 480px)
                third()

            &:last-child
                margin-right 0

    &__agreement
        font-size 18.67px // 28px / 1.5
        margin-bottom 30px
        hyphens()

        @media (min-width 992px)
            margin-bottom 0

        @media (min-width 1200px)
            font-size 28px
            line-height 37px

        input
            display inline-block
            width 14px
            margin-right 5px
            position absolute
            opacity 0
            vertical-align top

            &:focus + label
                outline 2px solid rgba(163, 82, 0, 0.1)

            & + label
                display block
                cursor pointer
                background-color $orange-light-color
                position relative
                padding 10px 0 10px 60px

                @media (min-width 480px)
                    padding 10px 35px 10px 55px
                    text-align center

                &:before
                    content ''
                    position absolute
                    left 8px
                    top 50%
                    transform translateY(-50%)
                    width 25px
                    height 25px
                    background-color white

                    @media (min-width 1200px)
                        width 42px
                        height 42px


                &:after
                    content ''
                    width 18px
                    height 10px
                    border-left 3px solid black
                    border-bottom 3px solid black
                    position absolute
                    left 12px
                    top 50%
                    transform translateY(-80%) rotate(-45deg)
                    opacity 0
                    transition all .15s linear

                    @media (min-width 1200px)
                        width 25px
                        height 15px
                        left 18px

            &:checked
                & + label
                    &:after
                        opacity 1

    &__text-order
        width 100%
        background-color white
        padding 10px
        font-size 18.67px // 28px / 1.5

        @media (min-width 1200px)
            font-size 28px

        td
            max-width 0
            hyphens()

        thead
            td
                padding-bottom 15px

        thead, tfoot
            font-weight 700

        td:last-child
            text-align right

    &__btn
        width 100%
        background-color white
        border none
        font-weight 700
        color $orange-dark-color
        cursor pointer
        font-size 18.67px // 28px / 1.5
        padding 8px
        overflow hidden
        hyphens()

        @media (min-width 1200px)
            font-size 28px

        &:focus
            outline-color #a35200

    &__quickpay
        display block
        width 100%
        text-align left
        border none
        background-color $orange-light-color
        padding 10px

        &:focus
            outline-color #a35200

    &__quickpay-title
        margin-bottom 5px

        span
            display inline-block
            font-size 18.67px // 28px / 1.5
            margin-right 10px
            vertical-align middle
            hyphens()

            @media (min-width 1200px)
                font-size 28px

    &__quickpay-img
        display inline-block
        width 203px
        height 25px
        vertical-align middle
        background inline('quickpay.png') center no-repeat

    &__quickpay-desc
        p
            hyphens()
            font-size 13.33px // 20px / 1.5

            @media (min-width 1200px)
                font-size 20px
