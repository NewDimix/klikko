.header
    position relative
    background-color $orange-dark-color
    padding-top 20px

    @media (min-width 1200px)
        padding-top 46px
        padding-bottom 5px

    h1
        margin 0

    &__column
        @media (min-width 1200px)
            display inline-block

        &_2
            @media (min-width 1200px)
                float right

    &__logo
        display block
        text-align center
        margin-left auto
        margin-right auto
        margin-bottom 20px
        vertical-align top
        padding-top 11px

        @media (min-width 1200px)
            margin-bottom 0
